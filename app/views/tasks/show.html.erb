<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 p-5">
      <h1><%= @task.title %></h1>
      <p><%= @task.details %></p>
      <p><%= @task.completed ? "☑ This task is completed" : "☐ This task is not completed yet" %></p>
      <hr>
      <%= link_to "Delete this task", task_path(@task), method: :delete, data: { confirm: "Delete #{@task.title}?" }, class: "btn btn-primary" %>
      <%= link_to "Edit this task", edit_task_path, class: "btn btn-primary" %>
      <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
